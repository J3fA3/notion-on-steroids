# Lotus Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Backend Configuration
# ============================================

# FastAPI Server
API_HOST=localhost
API_PORT=8000
DEBUG=true

# Database
DATABASE_URL=sqlite:///./data/lotus.db

# ============================================
# LLM Configuration
# ============================================

# Claude API (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# LLM Strategy
USE_LOCAL_LLM_FOR_CLASSIFICATION=true
USE_CLAUDE_FOR_INFERENCE=true

# ============================================
# Integration APIs
# ============================================

# Slack OAuth
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_REDIRECT_URI=http://localhost:8000/auth/slack/callback
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_USER_TOKEN=xoxp-your-user-token-here

# Google OAuth (for Google Meet transcripts)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================
# Security
# ============================================

# Encryption key for sensitive data in database
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# JWT Secret for API authentication (if implementing auth in Phase 2)
JWT_SECRET=your_jwt_secret_here

# ============================================
# Application Settings
# ============================================

# Task Inference
MIN_CONFIDENCE_THRESHOLD=70
BATCH_PROCESSING_SIZE=10
MAX_MESSAGES_PER_SYNC=100

# Rate Limiting
MAX_CLAUDE_CALLS_PER_DAY=50
RATE_LIMIT_WINDOW_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/lotus.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# Feature Flags (for phased rollout)
# ============================================

ENABLE_SLACK_INGESTION=true
ENABLE_GOOGLE_MEET_INGESTION=false
ENABLE_CONTEXT_WEAVER=false
ENABLE_PRIORITY_ORCHESTRATOR=false

# ============================================
# ChromaDB (Vector Database)
# ============================================

CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=lotus_messages
